{% extends 'base.html.twig' %}

{% block title %}Slide index{% endblock %}

{% block body %}
        {% for slide in slides %}
            <tr>
                <td>{{ slide.id }}</td>
                <td>{{ slide.imageName }}</td>
                <td>
                    <img  src="{{ path('slide_show', {'id': slide.id}) }}" />
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
