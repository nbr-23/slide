{% extends 'base.html.twig' %}

{% block title %}Liste{% endblock %}

{% block body %}

<a class="btn btn-success" href="{{ path('slide_new') }}">Ajouter une image</a>
<div class="row">
    
<div class="container" style="margin-top: 200px;">
    <h1>Liste des images</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImageName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for slide in slides %}
            <tr>
                <td>{{ slide.id }}</td>
                <td>{{ slide.imageName }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('slide_show', {'id': slide.id}) }}">show</a>
                   <div class="btn btn-danger">{{ include('slide/_delete_form.html.twig') }}</div> 
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="3">Aucune image n'est disponible</td>
                <a class="btn btn-success" href="{{ path('slide_new') }}">Ajouter une image</a>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
</div>
{% endblock %}