{% extends 'base.html.twig' %}

{% block title %}Liste{% endblock %}

{% block body %}

<a href="{{ path('slide_new') }}">Create new</a>
<div class="row">
    <h1>Liste des images</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImageName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for slide in slides %}
            <tr>
                <td>{{ slide.id }}</td>
                <td>{{ slide.imageName }}</td>
                <td>

                    <a href="{{ path('slide_show', {'id': slide.id}) }}">show</a>
                    {{ include('slide/_delete_form.html.twig') }}
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}